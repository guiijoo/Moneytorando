<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuReceita">

    <Button
        android:id="@+id/ajuda_receita_btn"
        android:layout_width="77dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        app:icon="@drawable/baseline_question_mark_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entrar_login_btn"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/fundo_moneytorando_login6"
        android:layout_width="417dp"
        android:layout_height="88dp"
        android:layout_marginBottom="360dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/menu_atalho_receita"
        android:layout_width="81dp"
        android:layout_height="93dp"
        android:textSize="24sp"
        android:theme="@style/Theme.Teste"
        app:icon="@drawable/barras_menu"
        app:layout_anchor="@+id/fundo_moneytorando_principal"
        app:layout_anchorGravity="start|top" />

    <Button
        android:id="@+id/menu_configurar_receita"
        android:layout_width="77dp"
        android:layout_height="93dp"
        android:textSize="24sp"
        android:theme="@style/Theme.Teste"
        app:icon="@drawable/configurar_menu"
        app:layout_anchor="@+id/fundo_moneytorando_principal"
        app:layout_anchorGravity="end|top"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/retono_receita_menu_btn"
        android:layout_width="256dp"
        android:layout_height="94dp"
        android:text="Botao_Retorno_Menu"
        app:icon="@drawable/retornar_icon"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/receita_atual_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receita Atual"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="160dp" />
</androidx.constraintlayout.widget.ConstraintLayout>